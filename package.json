{
  "name": "@brmorillo/util",
  "version": "10.0.0",
  "description": "Utility library with standardized methods",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "prepare": "husky install",
    "release": "standard-version",
    "commit": "cz",
    "postcommit": "npm run release && git push --follow-tags origin main"
  },
  "keywords": [
    "utils",
    "typescript",
    "utility"
  ],
  "author": "Bruno Morillo <bruno@rmorillo.com> (https://github.com/brmorillo)",
  "license": "GPL-3.0-or-later",
  "private": false,
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@sapphire/snowflake": "^3.5.5",
    "bcryptjs": "^2.4.3",
    "luxon": "^3.6.1",
    "ua-parser-js": "^1.0.40",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.6.2",
    "@types/node": "^20.19.0",
    "@types/ua-parser-js": "^0.7.39",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.4.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brmorillo/util.git"
  },
  "bugs": {
    "url": "https://github.com/brmorillo/util/issues"
  },
  "homepage": "https://github.com/brmorillo/util#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}